# ============================================
# VID-FINGER API - Configurações de Ambiente
# ============================================
# Copie este arquivo para .env e preencha com seus valores

# ============================================
# Aplicação
# ============================================
APP_NAME=VID-FINGER API
APP_VERSION=1.0.0
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# ============================================
# Banco de Dados PostgreSQL
# ============================================
# Formato: postgresql+asyncpg://usuario:senha@host:porta/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vidfinger
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/vidfinger

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Storage Local
# ============================================
STORAGE_PATH=/app/storage
MAX_FILE_SIZE=10737418240
CHUNK_SIZE=5242880

# ============================================
# DigitalOcean Spaces (CDN)
# ============================================
# Obtenha essas credenciais no painel do DigitalOcean Spaces
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=seu-bucket-name
DO_SPACES_KEY=sua-access-key
DO_SPACES_SECRET=sua-secret-key
OUTPUT_PREFIX=vid-finger
# Habilita upload automático para CDN após processamento
UPLOAD_TO_CDN=False

# ============================================
# API Base URL
# ============================================
# URL pública da API (usado para gerar URLs de download)
# No EasyPanel, configure com o domínio público: https://seu-dominio.com
# Se não configurado, será inferido do Request
API_BASE_URL=

# ============================================
# Webhooks
# ============================================
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3

# ============================================
# Celery (Processamento em Background)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Segurança (Opcional)
# ============================================
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================
# FFmpeg
# ============================================
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
